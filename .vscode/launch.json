{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with Auto Refresh",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "start:dev"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "restart": true,
      "cwd": "${workspaceFolder}"
    }
  ]
}
